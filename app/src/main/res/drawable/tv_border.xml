<!-- res/drawable/tv_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#161B22" />

    <!-- Border/Stroke -->
    <stroke
        android:width="1dp"
        android:color="#30363D" />   <!-- Grey border color -->

    <!-- Thoda rounded corner -->
    <corners android:radius="6dp" />

</shape>
